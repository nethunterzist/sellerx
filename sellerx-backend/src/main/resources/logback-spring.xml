<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!-- Common properties -->
    <property name="APP_NAME" value="sellerx"/>

    <!-- ======================== -->
    <!-- Development profile      -->
    <!-- Human-readable, colorized -->
    <!-- ======================== -->
    <springProfile name="development,default">
        <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
            <encoder>
                <pattern>%d{HH:mm:ss.SSS} %-5level [%15.15thread] %-40.40logger{39} [%X{requestId:-}] [user:%X{userId:-}] : %msg%n</pattern>
            </encoder>
        </appender>

        <root level="INFO">
            <appender-ref ref="CONSOLE"/>
        </root>
    </springProfile>

    <!-- ======================== -->
    <!-- Production profile       -->
    <!-- JSON structured logging  -->
    <!-- ======================== -->
    <springProfile name="production,prod">
        <appender name="JSON_CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
            <encoder class="net.logstash.logback.encoder.LogstashEncoder">
                <includeMdcKeyName>requestId</includeMdcKeyName>
                <includeMdcKeyName>userId</includeMdcKeyName>
                <fieldNames>
                    <timestamp>timestamp</timestamp>
                    <version>[ignore]</version>
                </fieldNames>
                <customFields>{"service":"sellerx-backend"}</customFields>
            </encoder>
        </appender>

        <root level="INFO">
            <appender-ref ref="JSON_CONSOLE"/>
        </root>
    </springProfile>

</configuration>
