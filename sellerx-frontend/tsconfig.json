{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    // Gradual strict mode enablement - Phase 1
    // Full strict mode causes 177 errors, so we're enabling incrementally
    "strict": false,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    // Phase 1 (enabled): Catch missing returns - important for async functions
    "noImplicitReturns": true,
    // Phase 2 (TODO): Enable unused checks after cleanup
    // These are disabled for now due to 132 unused variable errors
    "noImplicitAny": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    // Phase 3 (future): Enable strict: true after fixing all issues
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
